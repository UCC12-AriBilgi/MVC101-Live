@model IEnumerable<P08_MVCSample.Models.Car>

@{
    ViewData["Title"] = "Listele";
}

<h1>Listele</h1>

<p>
    <a asp-action="Create">Yeni Araba</a>
</p>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => car.CarID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.Family)
            </td>
            <td>
                @Html.DisplayFor(modelItem => car.Year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=car.CarID }) |
                @Html.ActionLink("Details", "Details", new { id=car.CarID }) |
                @Html.ActionLink("Delete", "Delete", new { id=car.CarID })
            </td>
        </tr>
}
    </tbody>
</table>
